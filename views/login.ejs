<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Story Busters Login</title>

<!--App CSS-->
<link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" /> <!--normalize-->
<link rel="stylesheet" href="/vendor/border-box.css" type="text/css" /> <!--border-box-->
<link rel="stylesheet" href="/styles/layout.css" type="text/css" /> <!--layout-->
<link rel="stylesheet" href="/styles/main.css" type="text/css" /> <!--main-->
<link rel="stylesheet" href="/styles/nav.css" type="text/css"/> <!--nav-->

    <!--External JS-->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>


  <body>
    <%- include('partials/_header') %>

    <h1>Login to join the rest of us!</h1>
    <form class="form-inline" action="/login" method="POST">
      <div class="container">
        <label for="users.email"><b>User Email</b></label>
        <input type="text" placeholder="Enter User Email" name="users.email" required>
        <label for="users.password"><b>Password</b></label>
        <input type="users.password" placeholder="Enter Password" name="users.password" required>
        <button type="submit">Login</button>
        <label>
          <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
      </div>
    </form>
  </body>
</html>

